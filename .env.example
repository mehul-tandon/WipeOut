# Backend Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENVIRONMENT=development

# Database Configuration (if needed for audit logs)
DATABASE_URL=postgresql://user:password@localhost:5432/secure_wiper

# Cloud KMS Configuration
# AWS KMS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
KMS_KEY_ID=your_kms_key_id

# Google Cloud KMS (alternative)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json
GCP_KMS_KEY_RING=your_key_ring
GCP_KMS_KEY=your_key_name
GCP_KMS_LOCATION=global

# Azure Key Vault (alternative)
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# Certificate Configuration
CERT_ISSUER_NAME=Secure Data Solutions
CERT_VALIDITY_DAYS=365
CERT_SIGNATURE_ALGORITHM=SHA256withRSA

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100

# File Storage
UPLOAD_DIR=./uploads
CERT_OUTPUT_DIR=./certificates
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Core Engine Configuration
CORE_ENGINE_VERSION=1.0.0
SUPPORTED_ALGORITHMS=nist,dod,gutmann,random
DEFAULT_PASSES=3
VERIFICATION_ENABLED=true

# Notification Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@securedatasolutions.com
